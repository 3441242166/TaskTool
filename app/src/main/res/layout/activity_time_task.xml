<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wanhao.tasktool.activity.TimeTaskActivity"
    android:background="@color/pureBlack"
    android:weightSum="5">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ededed" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/pureWhite"
            android:id="@+id/ac_time_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ac_time_task_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@color/pureWhite"
            android:textScaleX="1.2"
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ededed" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ac_timetask_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="3" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <include
            layout="@layout/activity_time_task_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></include>
    </android.support.v7.widget.CardView>

</LinearLayout>
